<Window x:Class="Simple.TaskManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple.TaskManagement"
        mc:Ignorable="d"
        Title="{Binding AboutThis.Title}" Height="350" Width="525">
    <Window.DataContext>
        <local:Locator/>
    </Window.DataContext>
    <Grid
        x:Name="_MAIN_WINDOW_LAYOUT">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid 
             x:Name="_APP_BAR">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label>
                <Run Text="Search bar:"/>
            </Label>
            <Border Grid.Column="1" BorderBrush="Red" BorderThickness="0.1" Margin="8,0,0,0">
                <TextBox  Text="{Binding InputTerm.Value, UpdateSourceTrigger=PropertyChanged}" />
            </Border>
            <Border Grid.Column="2">
                <Button Content=" -> " Command="{Binding Start}"/>
            </Border>
        </Grid>
        <Grid
            x:Name="_REGION_TASKS"
            Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>



            <Grid  x:Name="_TASK_LIST_AREA">
                <ListView  x:Name="_TASK_LIST" HorizontalContentAlignment="Stretch" ItemsSource="{Binding TaskList.Tasks.Value}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding TaskDescription}">
                                <ListView 
                                HorizontalContentAlignment="Stretch"
                                ItemsSource="{Binding Comments}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Key}" Margin="8 0 8 0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Value.Commentary}" Padding="4 0 4 0"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Value.ReminderDate}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Expander>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <GridSplitter x:Name="gridSplitter1" Grid.Row="1" Width="21" Height="5"  Background="#FF03A9F4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

            <Grid Grid.Row="2" x:Name="_TASK_SERACH_RESULT_AREA">
                <ListView x:Name="_TASK_SERACH_RESULT" HorizontalContentAlignment="Stretch" ItemsSource="{Binding TaskList.Tasks.Value}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Expander Header="{Binding TaskDescription}">
                                <ListView 
                                HorizontalContentAlignment="Stretch"
                                ItemsSource="{Binding Comments}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding Key}" Margin="8 0 8 0"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Value.Commentary}" Padding="4 0 4 0"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Value.ReminderDate}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Expander>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

        </Grid>
    </Grid>
</Window>
