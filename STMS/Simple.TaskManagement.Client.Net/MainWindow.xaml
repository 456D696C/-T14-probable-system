<Window x:Class="Simple.TaskManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple.TaskManagement"
        xmlns:domain="clr-namespace:Simple.TaskManagement.ViewModels"
        mc:Ignorable="d"
        Title="{Binding AboutThis.Title}" Height="800" Width="1100">
    <Window.DataContext>
        <local:Locator/>
    </Window.DataContext>
    <Grid
        x:Name="_MAIN_WINDOW_LAYOUT">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid 
             x:Name="_APP_BAR">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label>
                <Run Text="Search bar:"/>
            </Label>
            <Border Grid.Column="1" BorderBrush="Red" BorderThickness="0.1" Margin="8,0,0,0">
                <TextBox  Text="{Binding TextSearch.InputTerm.Value, UpdateSourceTrigger=PropertyChanged}" />
            </Border>
            <Border Grid.Column="2">
                <Button Content=" -> " Command="{Binding TextSearch.Start}"/>
            </Border>
        </Grid>
        <Grid 
            x:Name="_APP_CONTENT"
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid
            x:Name="_REGION_TASKS">
            
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <Grid  x:Name="_NEW_LIST_AREA">
                    <ListView  x:Name="_NEW_TASK_LIST" HorizontalContentAlignment="Stretch" ItemsSource="{Binding Factory.Next.Value}">
                        <ListView.Resources>
                            <DataTemplate DataType="{x:Type domain:NextTaskManagerViewModel}">
                                <Grid>
                                    <Border Name="border" BorderBrush="Navy" BorderThickness="1" Padding="5" Margin="5">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Task Name:"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Current.Value.TaskId}" />
                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Current.Value.TaskDescription}"/>
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Task Type:"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Current.Value.TaskType}"/>
                                            <Grid Grid.Row="4" Grid.ColumnSpan="2">
                                                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                                    <Button Content="Save"   Command="{Binding SaveAsyncCommand}"    />
                                                    <Button Content="Cancel" Command="{Binding CancelAsyncCommand}"   />
                                                </StackPanel>
                                            </Grid>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListView.Resources>
                    </ListView>
                </Grid>

                <GridSplitter x:Name="gridSplitter1" Grid.Row="1" Width="21" Height="5"  Background="#FF03A9F4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />


                <Grid  x:Name="_TASK_LIST_AREA" Grid.Row="2">
                    <StackPanel>
                        <TextBlock Text="TASK LIST AREA"/>
                        <ListView  x:Name="_TASK_LIST" HorizontalContentAlignment="Stretch" ItemsSource="{Binding TaskList.Tasks.Value}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Expander Header="{Binding TaskDescription}">
                                        <ListView 
                                HorizontalContentAlignment="Stretch"
                                ItemsSource="{Binding Comments}">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Key}" Margin="8 0 8 0"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Value.Commentary}" Padding="4 0 4 0"/>
                                                        <TextBlock Grid.Column="2" Text="{Binding Value.ReminderDate}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Expander>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>

                <GridSplitter x:Name="gridSplitter2" Grid.Row="3" Width="21" Height="5"  Background="#FF03A9F4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                <Grid Grid.Row="4" x:Name="_TASK_SERACH_RESULT_AREA">
                    <StackPanel>
                        <TextBlock Text="SEARCH RESULTS"/>
                        <ListView x:Name="_TASK_SERACH_RESULT_LIST" 
                          HorizontalContentAlignment="Stretch" 
                          SelectedValue="{Binding SearchResult.SelectedItem.Value}"
                          ItemsSource="{Binding SearchResult.TaskList.Value}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Expander Header="{Binding TaskDescription}">
                                        <ListView 
                                HorizontalContentAlignment="Stretch"
                                ItemsSource="{Binding Comments}">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{Binding Key}" Margin="8 0 8 0"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding Value.Commentary}" Padding="4 0 4 0"/>
                                                        <TextBlock Grid.Column="2" Text="{Binding Value.ReminderDate}" />
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Expander>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>

            </Grid>
            <GridSplitter x:Name="gridSplitter0" Grid.Column="1" Width="21" Height="5"  Background="#FF03A9F4" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
            <Grid x:Name="_REGION_MISC" Grid.Column="2">
                <TabControl x:Name="_FEATURES_TABS">
                    <TabItem x:Name="_COOL_FEATURE_TAB_ITEM">
                        <TabItem.Header>
                            <TextBlock Text="COOL FEATURE" />
                        </TabItem.Header>
                        <Grid x:Name="_COOL_FEATURE_LAYOUT"/>
                    </TabItem>
                    <TabItem x:Name="_YET_ANOTHER_COOL_FEATURE_TAB_ITEM">
                        <TabItem.Header>
                            <TextBlock Text="YET ANOTHER COOL FEATURE" />
                        </TabItem.Header>
                        <Grid x:Name="_YET_ANOTHER_COOL_FEATURE_LAYOUT"/>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" 
              HorizontalAlignment="Center" >
            <Button Command="{Binding Factory.StartAsyncCommand}">
                <TextBlock Text="+" MinWidth="50"
                           TextAlignment="Center"
                           VerticalAlignment="Center"/>
            </Button>
        </Grid>
    </Grid>
</Window>
